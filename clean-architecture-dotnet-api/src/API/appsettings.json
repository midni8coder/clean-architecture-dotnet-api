{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=CleanArchDb;Trusted_Connection=true;Connection Timeout=3;"
  },
  "Redis": {
    "Host": "localhost",
    "Port": 6379
  },
  "Jwt": {
    "Issuer": "https://localhost:7001",
    "Audience": "CleanArchApi",
    "SecretKey": "YourVeryLongSecureSecretKeyThatIsAtLeast32CharactersLong!",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "AllowStartupWithoutDatabase": true
}
